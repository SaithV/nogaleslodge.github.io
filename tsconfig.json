{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
  "types": ["vite/client", "node", "react", "react-dom"],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/routes/*": ["src/routes/*"],
      "@/layouts/*": ["src/layouts/*"],
      "@/content/*": ["src/content/*"],
      "@/i18n/*": ["src/i18n/*"],
      "@/lib/*": ["src/lib/*"]
    }
  },
  "include": ["src", "src/global.d.ts", "src/types/**/*.d.ts", "vite.config.ts", "tailwind.config.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
